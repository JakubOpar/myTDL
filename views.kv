#:kivy 2.1.0

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Ładowanie aplikacji..."
            font_size: 24

<AddCategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 30

        Widget:
            size_hint_y: 0

        Label:
            text: "Dodaj nową kategorię"
            font_size: 24
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 65
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, 10, 10, 10]

            TextInput:
                id: category_name_input
                hint_text: "Wprowadź nazwę kategorii"
                font_size: 18
                foreground_color: 0, 0, 0, 1
                background_color: 0, 0, 0, 0
                size_hint_x: 1
                height: 60
                multiline: False
                padding: [15, 15, 15, 15]
                halign: "center"
                valign: "middle"
                text_size: self.size

        Widget:
            size_hint_y: 1

        Button:
            text: "+"
            size_hint: None, None
            width: 150
            height: 150
            pos_hint: {"center_x": 0.5}
            background_color: 0, 0, 0, 0
            on_press: app.add_category(category_name_input.text)

            canvas.before:
                Color:
                    rgba: 0.3, 0.7, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]

        Widget:
            size_hint_y: 0.2

        Button:
            text: "P"
            size_hint: None, None
            width: 150
            height: 150
            pos_hint: {"center_x": 0.5}
            background_color: 0, 0, 0, 0
            on_press: app.show_main_menu()

            canvas.before:
                Color:
                    rgba: 0.1, 0.5, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]

<DeleteCategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Usuń kategorię"
            font_size: 20

        Spinner:
            id: category_spinner
            text: "Wybierz kategorię"
            values: app.get_category_list()

        Button:
            text: "Usuń kategorię"
            on_press: app.delete_category(category_spinner.text)

        Button:
            text: "Powrót do menu"
            on_press: app.show_main_menu()

<CategoryListScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10

            Label:
                size_hint_x: 0.6

            Button:
                text: "+"
                size_hint_x: None
                width: 60
                height: 60
                background_color: 0, 0, 0, 0
                on_press: app.show_add_category_screen()

                canvas.before:
                    Color:
                        rgba: 0.3, 0.7, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

            Button:
                text: "S"
                size_hint_x: None
                width: 60
                height: 60
                background_color: 0, 0, 0, 0
                on_press: app.show_search_screen()

                canvas.before:
                    Color:
                        rgba: 0.1, 0.5, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: category_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

<LoadingScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20
        Label:
            text: "Ładowanie..."
            font_size: 24
        ProgressBar:
            max: 100
            value: 50

<TaskManagementScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            id: category_label
            text: "Zadania dla kategorii"
            font_size: 24
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10

            Label:
                size_hint_x: 0.6

            Button:
                text: "+"
                size_hint_x: None
                width: 60
                height: 60
                background_color: 0, 0, 0, 0
                on_press: app.show_add_task_screen()

                canvas.before:
                    Color:
                        rgba: 0.3, 0.7, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

            Button:
                text: "S"
                size_hint_x: None
                width: 60
                height: 60
                background_color: 0, 0, 0, 0
                on_press: app.show_search_task_screen()

                canvas.before:
                    Color:
                        rgba: 0.1, 0.5, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: task_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: [0, 5, 0, 5]  # Dodanie małych odstępów czarnych

        Button:
            text: "Powrót"
            size_hint: None, None
            width: 150
            height: 60
            pos_hint: {"center_x": 0.5}
            background_color: 0, 0, 0, 0
            on_press: app.show_category_list_screen()

            canvas.before:
                Color:
                    rgba: 0.1, 0.5, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]

<EditTaskScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: [20, 10]
        spacing: 10
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        Label:
            id: task_label
            text: "Edytuj zadanie"
            font_size: 20
            size_hint_y: None
            height: 40
            color: (1,1,1,1)
            bold: True
            halign: "center"
            valign: "middle"

        GridLayout:
            cols: 1
            spacing: 10
            size_hint_y: None
            height: self.minimum_height

            BoxLayout:
                size_hint_y: None
                height: 50
                padding: [5, 5]
                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

                TextInput:
                    id: task_name
                    hint_text: "Nazwa zadania"
                    size_hint_x: 1
                    size_hint_y: None
                    height: 50
                    foreground_color: (1, 1, 1, 1)
                    background_color: (0, 0, 0, 0)
                    padding: [16, 16]
                    multiline: False
                    font_size: 16

            BoxLayout:
                size_hint_y: None
                height: 50
                padding: [5, 5]
                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

                TextInput:
                    id: task_priority
                    hint_text: "Priorytet (1-5)"
                    size_hint_x: 1
                    size_hint_y: None
                    height: 50
                    foreground_color: (1, 1, 1, 1)
                    background_color: (0, 0, 0, 0)
                    padding: [16, 16]
                    multiline: False
                    font_size: 16

            BoxLayout:
                size_hint_y: None
                height: 50
                padding: [5, 5]
                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

                TextInput:
                    id: task_date
                    hint_text: "Data zadania (DD-MM-YYYY HH:MM)"
                    size_hint_x: 1
                    size_hint_y: None
                    height: 50
                    foreground_color: (1, 1, 1, 1)
                    background_color: (0, 0, 0, 0)
                    padding: [16, 16]
                    multiline: False
                    font_size: 16

            BoxLayout:
                size_hint_y: None
                height: 50
                padding: [5, 5]
                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

                TextInput:
                    id: task_reminder
                    hint_text: "Przypomnienie (DD-MM-YYYY HH:MM)"
                    size_hint_x: 1
                    size_hint_y: None
                    height: 50
                    foreground_color: (1, 1, 1, 1)
                    background_color: (0, 0, 0, 0)
                    padding: [16, 16]
                    multiline: False
                    font_size: 16

            BoxLayout:
                size_hint_y: None
                height: 80
                padding: [5, 5]
                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

                TextInput:
                    id: task_description
                    hint_text: "Opis zadania"
                    size_hint_x: 1
                    size_hint_y: None
                    height: 80
                    foreground_color: (1, 1, 1, 1)
                    background_color: (0, 0, 0, 0)
                    padding: [16, 16]
                    font_size: 16
                    multiline: True

        Label:
            id: category_label
            text: "Kategoria: "
            font_size: 18
            size_hint_y: None
            height: 30
            color: (1,1,1,1)
            halign: "center"
            valign: "middle"
            bold: True

        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10

            Button:
                id: save_button
                text: "Zapisz"
                size_hint_y: None
                height: 50
                font_size: 16
                background_color: (0.1, 0.5, 0.9, 1)
                color: (1, 1, 1, 1)
                bold: True
                on_press:
                    app.save_task_changes(app.current_task_id, task_name.text, task_priority.text, task_date.text, task_reminder.text, task_description.text, app.selected_category)

            Button:
                id: cancel_button
                text: "Anuluj"
                size_hint_y: None
                height: 50
                font_size: 16
                background_color: (0.7, 0.1, 0.1, 1)
                color: (1, 1, 1, 1)
                bold: True
                on_press:
                    app.show_task_management_screen(app.selected_category)








