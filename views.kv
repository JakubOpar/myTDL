#:kivy 2.1.0

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Ładowanie aplikacji..."
            font_size: 24

<AddCategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 30

        Widget:
            size_hint_y: 0

        Label:
            text: "Dodaj nową kategorię"
            font_size: 24
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 65
            size_hint_x: 0.7  # Skalowanie szerokości do ekranu
            pos_hint: {"center_x": 0.5}  # Wycentrowanie

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Białe tło pola tekstowego
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, 10, 10, 10]

            TextInput:
                id: category_name_input
                hint_text: "Wprowadź nazwę kategorii"
                font_size: 18
                foreground_color: 0, 0, 0, 1
                background_color: 0, 0, 0, 0
                size_hint_x: 1  # Dopasowanie do szerokości kontenera
                height: 60
                multiline: False  # Zapobiega przechodzeniu do nowej linii
                padding: [15, 15, 15, 15]
                halign: "center"  # Wyśrodkowanie poziome
                valign: "middle"  # Wyśrodkowanie pionowe
                text_size: self.size  # Tekst dostosowuje się do wielkości pola

        Widget:
            size_hint_y: 1

        Button:
            text: "+"
            size_hint: None, None
            width: 150
            height: 150
            pos_hint: {"center_x": 0.5}
            background_color: 0, 0, 0, 0
            on_press: app.add_category(category_name_input.text)

            canvas.before:
                Color:
                    rgba: 0.3, 0.7, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]

        Widget:
            size_hint_y: 0.2

        Button:
            text: "P"
            size_hint: None, None
            width: 150
            height: 150
            pos_hint: {"center_x": 0.5}
            background_color: 0, 0, 0, 0
            on_press: app.show_main_menu()

            canvas.before:
                Color:
                    rgba: 0.1, 0.5, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]

<DeleteCategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Usuń kategorię"
            font_size: 20

        Spinner:
            id: category_spinner
            text: "Wybierz kategorię"
            values: app.get_category_list()

        Button:
            text: "Usuń kategorię"
            on_press: app.delete_category(category_spinner.text)

        Button:
            text: "Powrót do menu"
            on_press: app.show_main_menu()

<CategoryListScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 10

            Label:
                size_hint_x: 0.6

            Button:
                text: "+"
                size_hint_x: None
                width: 60
                height: 60
                background_color: 0, 0, 0, 0
                on_press: app.show_add_category_screen()

                canvas.before:
                    Color:
                        rgba: 0.3, 0.7, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

            Button:
                text: "S"
                size_hint_x: None
                width: 60
                height: 60
                background_color: 0, 0, 0, 0
                on_press: app.show_search_screen()

                canvas.before:
                    Color:
                        rgba: 0.1, 0.5, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: category_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

<LoadingScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20
        Label:
            text: "Ładowanie..."
            font_size: 24
        ProgressBar:
            max: 100
            value: 50




