#:kivy 2.1.0

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Ładowanie aplikacji..."
            font_size: 24

<AddCategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Dodaj nową kategorię"
            font_size: 20

        TextInput:
            id: category_name_input
            hint_text: "Wprowadź nazwę kategorii"

        Button:
            text: "Dodaj kategorię"
            on_press: app.add_category(category_name_input.text)

        Button:
            text: "Powrót do menu"
            on_press: app.show_main_menu()

<DeleteCategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Usuń kategorię"
            font_size: 20

        Spinner:
            id: category_spinner
            text: "Wybierz kategorię"
            values: app.get_category_list()

        Button:
            text: "Usuń kategorię"
            on_press: app.delete_category(category_spinner.text)

        Button:
            text: "Powrót do menu"
            on_press: app.show_main_menu()

<CategoryListScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        BoxLayout:
            size_hint_y: None
            height: 60  # CATEGORY_HEIGHT
            spacing: 10  # CATEGORY_SPACING

            Label:
                size_hint_x: 0.6  # Proporcje takie same jak w Pythonie

            Button:
                text: "+"
                size_hint_x: None
                width: 60  # BUTTON_WIDTH
                height: 60  # Dopasowane do kategorii
                background_color: 0, 1, 0, 1
                on_press: app.show_add_category_screen()

            Button:
                text: "S"
                size_hint_x: None
                width: 60  # BUTTON_WIDTH
                height: 60  # Dopasowane do kategorii
                background_color: 1, 1, 0, 1
                on_press: app.show_search_screen()

        ScrollView:
            BoxLayout:
                id: category_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10  # CATEGORY_SPACING



